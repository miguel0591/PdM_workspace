#include "MEF.h"

static MEF_status MEF;

/*Flag para indicar si se viene de un cambio de estado o se mantiene el mismo, el flag1 es para el estado 1, flag2 para
 * el estado 2 y flag3 para el estado 3*/

static bool_t flag1, flag2, flag3;

// valor de temperatua
uint16_t temp = 0;


static void LCD_printEstable(uint16_t temp){
	LCD_2x16_cursor(1, 1);
	LCD_2x16_string("Estado:  Estable");
	LCD_2x16_cursor(2, 1);
	LCD_2x16_string("Temperatura:");
	LCD_2x16_cursor(2, 14);
	LCD_2x16_uint16(temp);
}

static void LCD_printPrecaucion(uint16_t temp){
	LCD_2x16_cursor(1, 1);
	LCD_2x16_string("Estado: Precauc.");
	LCD_2x16_cursor(2, 1);
	LCD_2x16_string("Temperatura:");
	LCD_2x16_cursor(2, 14);
	LCD_2x16_uint16(temp);
}

static void LCD_printPeligro(uint16_t temp){
	LCD_2x16_cursor(1, 1);
	LCD_2x16_string("Estado: Peligro");
	LCD_2x16_cursor(2, 1);
	LCD_2x16_string("Temperatura:");
	LCD_2x16_cursor(2, 14);
	LCD_2x16_uint16(temp);
}

/*Manejo de FAN*/
static void MEF_fanOff(){};
static void MEF_fanOn(){};

/*Manejo de Alarma*/
static void MEF_alarmOff(){};
static void MEF_alarmOn(){};


void MEF_init(){
	MEF = ESTABLE;
}

void MEF_update(){
	switch(MEF){
		case ESTABLE:
			//temp = SENSOR_checkTemp();
			if (temp < T1) {
				if(flag1 == 0){
					flag1 = 1;
					flag2 = 0;
					flag3 = 0;
					LDC_2x16_clear();
					LCD_printEstable(temp);
					MEF_fanOff();
					MEF_alarmOff();
				}
			};

			if(temp>T1 && temp<=T2){
				MEF = PRECAUCION;
				flag1 = 0;
				flag2 = 1;
				flag3 = 0;
				LDC_2x16_clear();
				LCD_printPrecaucion(temp);
				MEF_fanOn();
				MEF_alarmOff();
			}else{
				MEF = PELIGRO;
				flag1 = 0;
				flag2 = 0;
				flag3 = 1;
				LDC_2x16_clear();
				LCD_printPeligro(temp);
				MEF_fanOn();
				MEF_alarmOn();
			}

		break;

		case PRECAUCION:
			//temp = SENSOR_checkTemp();
			if (temp > T1 && temp <= T2) {
				if(flag2 == 0){
					flag1 = 0;
					flag2 = 1;
					flag3 = 0;
					LDC_2x16_clear();
					LCD_printPrecaucion(temp);
					MEF_fanOn();
					MEF_alarmOff();
				}
			};

			if(temp < T1){
				MEF = ESTABLE;
				flag1 = 1;
				flag2 = 0;
				flag3 = 0;
				LDC_2x16_clear();
				LCD_printPrecaucion(temp);
				MEF_fanON();
				MEF_alarmOff();
			}

		break;

		case PELIGRO:
			//temp = SENSOR_checkTemp();
			if (temp > T1 && temp <= T2) {
				if(flag3 == 0){
					flag1 = 0;
					flag2 = 1;
					flag3 = 0;
					LDC_2x16_clear();
					LCD_printPrecaucion(temp);
					MEF_fanON();
					MEF_alarmOn();
				}
			};


		break;

	}
}
