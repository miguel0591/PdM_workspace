#include "MEF.h"

static MEF_status MEF;

static void LCD_printEstable(void){
	LCD_2x16_cursor(1, 1);
	LCD_2x16_string("Estado:  Estable");
	LCD_2x16_cursor(2, 1);
	LCD_2x16_string("Temperatura:");
	LCD_2x16_cursor(2, 14);
	LCD_2x16_uint8(30);
}

static void LCD_printPrecaucion(void){
	LCD_2x16_cursor(1, 1);
	LCD_2x16_string("Estado:Precaucion");
	LCD_2x16_cursor(2, 1);
	LCD_2x16_string("Temperatura:");
	LCD_2x16_cursor(2, 14);
	LCD_2x16_uint8(30);
}

void MEF_init(){
	MEF = ESTABLE;
}

void MEF_update(){
	switch(MEF){
		case ESTABLE:
			//LCD_printEstable();
			LDC_2x16_clear();
			LCD_printPrecaucion();
			//var temp = Sensor_tempRead();
			//if(temp){}

		break;

		case PRECAUCION:

		break;

		case PELIGRO:

		break;

	}
}
