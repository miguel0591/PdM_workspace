#include "MEF.h"

static MEF_status MEF;
uint8_t temp = 0;

static void LCD_printEstable(uint8_t temp){
	LCD_2x16_cursor(1, 1);
	LCD_2x16_string("Estado:  Estable");
	LCD_2x16_cursor(2, 1);
	LCD_2x16_string("Temperatura:");
	LCD_2x16_cursor(2, 14);
	LCD_2x16_uint8(temp);
}

static void LCD_printPrecaucion(uint8_t temp){
	LCD_2x16_cursor(1, 1);
	LCD_2x16_string("Estado: Precauc.");
	LCD_2x16_cursor(2, 1);
	LCD_2x16_string("Temperatura:");
	LCD_2x16_cursor(2, 14);
	LCD_2x16_uint8(30);
}

static void LCD_printPeligro(uint8_t temp){
	LCD_2x16_cursor(1, 1);
	LCD_2x16_string("Estado: Peligro");
	LCD_2x16_cursor(2, 1);
	LCD_2x16_string("Temperatura:");
	LCD_2x16_cursor(2, 14);
	LCD_2x16_uint8(30);
}

void MEF_init(){
	MEF = ESTABLE;
}

void MEF_update(){
	switch(MEF){
		case ESTABLE:
			if(temp)

		break;

		case PRECAUCION:

		break;

		case PELIGRO:

		break;

	}
}
